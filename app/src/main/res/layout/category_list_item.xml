<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        app:cardBackgroundColor="@android:color/black"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="1dp"
                android:paddingLeft="0.5dp"
                android:paddingRight="0.5dp"
                android:paddingBottom="1dp"
                android:background="@android:color/white"
                android:id="@+id/list_item_image"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/list_item_detail_box"
                android:orientation="vertical">
                <!--<TextView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:text="Name"-->
                    <!--android:paddingLeft="5dp"-->
                    <!--android:paddingRight="5dp"-->
                    <!--android:textSize="13sp"-->
                    <!--android:textColor="@android:color/white"-->
                    <!--android:id="@+id/list_item_name"/>-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Genre"
                    android:textSize="13sp"
                    android:paddingLeft="5dp"
                    android:textColor="@android:color/white"
                    android:id="@+id/list_item_genre"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp">
                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="14dp"
                        android:elevation="50dp"
                        android:paddingLeft="5dp"
                        android:progressTint="#1A237E"
                        android:id="@+id/list_item_ratingBar"
                        android:isIndicator="true"
                        android:progressBackgroundTint="@android:color/transparent"
                        android:secondaryProgressTint="#1A237E"
                        android:stepSize="0.1"
                        style="?android:attr/ratingBarStyleSmall"
                        android:numStars="5"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/list_item_releaseDate"
                        android:textColor="@android:color/white"
                        android:paddingLeft="5dp"
                        android:textSize="11sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text=""
                        android:paddingRight="12dp"
                        android:textColor="@android:color/white"
                        android:textSize="11sp"
                        android:id="@+id/list_item_vote"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>